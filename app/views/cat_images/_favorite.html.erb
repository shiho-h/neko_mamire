<% if cat_image.favorited_by?(current_user) %>
                      <%= link_to cat_image_favorites_path(cat_image), method: :delete, remote: true do %>
                        <i class="fas fa-heart fa-fw"></i>
                          <%= "#{cat_image.favorites.count}" %>
                      <% end %>
                    <% else %>
                      <%= link_to cat_image_favorites_path(cat_image), method: :post, remote: true do %>
                          <i class="far fa-heart fa-fw" aria-hidden="true"></i>
                            <%= "#{cat_image.favorites.count}" %>
                      <% end %>
                    <% end %>