<%= form_for(@cat_image) do |f| %>
  <% if @cat_image.errors.any? %>
    <%= @cat_image.errors.count %>件のエラーが発生しました
    <% @cat_image.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>

  <%= f.attachment_field :image %>
  catname: <%= f.text_field :catname %>
  memo: <%= f.text_area :memo %>
  tag: <%= f.text_field :tag_list, value: @cat_image.tag_list.join(',') %>
  <%= f.submit %>
<% end %>
