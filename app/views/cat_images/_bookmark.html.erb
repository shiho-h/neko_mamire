<% if cat_image.bookmark_by?(current_user) %>
                      <%= link_to cat_image_bookmarks_path(cat_image), method: :delete, remote: true do %>
                      <i class="fas fa-bookmark fa-fw"></i>
                        <%= "#{cat_image.bookmarks.count}" %>
                      <% end %>
                    <% else %>
                      <%= link_to cat_image_bookmarks_path(cat_image), method: :post, remote: true do %>
                      <i class="far fa-bookmark fa-fw"></i>
                        <%= "#{cat_image.bookmarks.count}" %>
                      <% end %>
                    <% end %>