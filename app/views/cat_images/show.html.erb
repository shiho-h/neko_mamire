

    <div class="post-meta-top">
      <div class="post-image">
        <%= attachment_image_tag @cat_image, :image, :size =>'480x320' %>
      </div>
    </div>
    <div class="post-content">
      <h2 class="post-title"><%= @cat_image.catname %></h2>
      <ul class="meta-info-cells v4 float-wrapper">
        <li>
          <i class="fa fa-user"></i>By<a href="#">
            <%= @cat_image.user.name %></a>
        </li>
        <li>
        <%= @cat_image.memo %>
        </li>
        <li>
          <i class="fa fa-calendar"></i><%= @cat_image.created_at.strftime('%Y/%m/%d') %>
        </li>

        <!-- いいね関係 -->
      <% if @cat_image.favorited_by?(current_user) %>
        <li>
        <%= link_to cat_image_favorites_path(@cat_image), method: :delete do %>
        <%= @cat_image.favorites.count %> ♥
        <% end %>
        </li>
      <% else %>
        <li>
        <%= link_to cat_image_favorites_path(@cat_image), method: :post do %>
        <%= @cat_image.favorites.count %> ♡
        <% end %>
        </li>
      <% end %>






        </li>
        <li>
          <i class="fa fa-comment"></i>
          <%= @cat_image.comments.count %>件コメント
        </li>
      </ul>
      </div>
    </div>


<!-- コメント関係 -->

    <%= form_for [@cat_image, @comment] do |f| %>
  <div class="row">
    <div class="col-sm-12">
      <%= f.text_area :message, rows:'5', class: "form-control",placeholder: "コメントをここに" %>
    </div>
  </div>
  <%= f.submit "送信する", class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
    <% end %>

 <% @cat_image.comments.each do |comment| %>
 <%= comment.user.name %>
 <%= comment.created_at.strftime('%Y/%m/%d') %>
 <%= comment.message %>
  <% if comment.user == current_user %>
            <div>
              <%= link_to "削除", cat_image_comment_path(comment.cat_image, comment), method: :delete, class: "btn btn-danger pull-right" %>
            </div>
  <% end %>
 <br>
 <% end %>


