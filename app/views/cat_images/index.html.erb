<h1>今月のうちねこ見てください</h1>

 <% @cat_images.each do |cat_image| %>
 <%= link_to cat_image_path(cat_image.id) do %>
  <%= attachment_image_tag cat_image, :image, :size =>'480x320' %>
  <% end %>
  <%= cat_image.created_at.strftime('%Y/%m/%d %H:%M') %>
  <%= cat_image.user.name %>
  <%= cat_image.catname %>
  <%= cat_image.memo %>
  <%= link_to "#{cat_image.comments.count} コメント", cat_image_path(cat_image.id) %>
 
 <% if cat_image.favorited_by?(current_user) %>
  <%= link_to cat_image_favorites_path(cat_image), method: :delete do %>
    <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
    <%= cat_image.favorites.count %> ♥
  <% end %>
<% else %>
  <%= link_to cat_image_favorites_path(cat_image), method: :post do %>
    <i class="fa fa-heart-o" aria-hidden="true"></i>
    <%= cat_image.favorites.count %> ♡
  <% end %>

<% end %>

<!-- お気に入り -->
 <% if cat_image.bookmark_by?(current_user) %>
      <%= link_to cat_image_bookmarks_path(cat_image), method: :delete do %>
      <%= cat_image.bookmarks.count %> ★
      <% end %>
  <% else %>
      <%= link_to cat_image_bookmarks_path(cat_image), method: :post do %>
      <%= cat_image.bookmarks.count %> ☆
    <% end %>
<% end %>

